//= depend_on_asset 'marty/OpenSans/OpenSans-Bold.ttf'
//= depend_on_asset 'marty/OpenSans/OpenSans-Regular.ttf'
//= depend_on_asset 'marty/OpenSans/OpenSans-SemiBold.ttf'
//= depend_on_asset 'marty/FiraCode/FiraCode-Bold.woff2'
//= depend_on_asset 'marty/FiraCode/FiraCode-Light.woff2'
//= depend_on_asset 'marty/FiraCode/FiraCode-Medium.woff2'
//= depend_on_asset 'marty/FiraCode/FiraCode-Regular.woff2'
//= depend_on_asset 'marty/FiraCode/FiraCode-SemiBold.woff2'
//= depend_on_asset 'marty/FiraCode/FiraCode-VF.woff2'

/* OpenSans */
@font-face {
  font-family: "Open Sans";
  font-style: normal;
  font-weight: 400;
  font-display: swap;
  src: url('<%= font_path('marty/OpenSans/OpenSans-Regular.ttf') %>')
       format("truetype");
}

@font-face {
  font-family: "Open Sans";
  font-style: normal;
  font-weight: 600;
  font-display: swap;
  src: url('<%= font_path('marty/OpenSans/OpenSans-SemiBold.ttf') %>')
       format("truetype");
}

@font-face {
  font-family: "Open Sans";
  font-style: normal;
  font-weight: 700;
  font-display: swap;
  src: url('<%= font_path('marty/OpenSans/OpenSans-Bold.ttf') %>')
       format("truetype");
}

/* FiraCode */
@font-face {
  font-family: "Fira Code";
  src: url('<%= font_path('marty/FiraCode/FiraCode-Light.woff2') %>')
       format("woff2");
  font-weight: 300;
  font-style: normal;
}

@font-face {
  font-family: "Fira Code";
  src: url('<%= font_path('marty/FiraCode/FiraCode-Regular.woff2') %>')
       format("woff2");
  font-weight: 400;
  font-style: normal;
}

@font-face {
  font-family: "Fira Code";
  src: url('<%= font_path('marty/FiraCode/FiraCode-Medium.woff2') %>')
       format("woff2");
  font-weight: 500;
  font-style: normal;
}

@font-face {
  font-family: "Fira Code";
  src: url('<%= font_path('marty/FiraCode/FiraCode-SemiBold.woff2') %>')
       format("woff2");
  font-weight: 600;
  font-style: normal;
}

@font-face {
  font-family: "Fira Code";
  src: url('<%= font_path('marty/FiraCode/FiraCode-Bold.woff2') %>')
       format("woff2");
  font-weight: 700;
  font-style: normal;
}

@font-face {
  font-family: "Fira Code VF";
  src: url('<%= font_path('marty/FiraCode/FiraCode-VF.woff2') %>')
       format("woff2-variations");
  /* font-weight requires a range:
  https://developer.mozilla.org/en-US/docs/Web/CSS/CSS_Fonts/Variable_Fonts_Guide#Using_a_variable_font_font-face_changes
  */
  font-weight: 300 700;
  font-style: normal;
}
