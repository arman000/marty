<style>
  html,
  body {
  height: 100%;
  }
  body {
  display: -ms-flexbox;
  display: -webkit-box;
  display: flex;
  -ms-flex-align: center;
  -ms-flex-pack: center;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: center;
  justify-content: center;
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #f5f5f5;
  }

  .form {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: 0 auto;
  }

  .form .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
  }
  .form .form-control:focus {
  z-index: 2;
  }
  .form input[type="username"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
  }
  .form input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  }

</style>
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title> <%= Rails.application.class.parent_name %> API </title>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/js/bootstrap.min.js" integrity="sha384-o+RDsa0aLu++PJvFqy8fFScvbHFLtbvScb8AjopnFD+iEQ7wo/CG0xlczd+2O/em" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.2/css/bootstrap.min.css" integrity="sha384-Smlep5jCw/wG7hdkwQ/Z5nLIefveQRIY9nfy6xoR1uRYBtpZgI6339F5dgvm/e9B" crossorigin="anonymous">

  </head>
  <body class="text-center">
    <%= form_for :user, :url => api_sign_in_path, html: {class: 'form'} do |f| %>
    <img src="https://www.s2.divertazas.com/58596-large_default/cojin-con-relleno-chibi-kawaii-marty-mcfly-parodia-de-regreso-al-futuro.jpg" height="250px">
    <h1 class="h3 mb-3 font-weight-normal">Marty API Client</h1>
        <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
      <%= f.text_field :username, type: 'username', placeholder: 'username', class: 'form-control', required: true, autofocus: true %>
      <%= f.password_field :password, placeholder: 'password', class: 'form-control', required: true %>
      <%= f.submit 'Test', class: 'btn btn-lg btn-primary btn-block' %>
    <a href="<%= api_sign_in_path %>" class="btn btn-lg btn-primary btn-block">Sign up</a> 
    <% end %>

  </body>
</html>
